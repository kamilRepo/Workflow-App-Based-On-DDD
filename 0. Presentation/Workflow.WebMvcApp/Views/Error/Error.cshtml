@using Workflow.Basic.Presentation.Resources.Common;
@model Workflow.Basic.Presentation.BasicModel.ErrorModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Common.Error;
}


<div id="mvcNotifyError">
    <div class="large-8 medium-8 small-12 small-centered columns">
        <div class="row">
            <h1 class="text-center">@Common.Error :(</h1>
            <h3 class="text-center">@Model.Message</h3>            
        </div>
        @if (!@Model.IsProduction)
        {
            <div class="row">            
                <h1 class="text-center">@Common.ErrorProgrammer</h1>
                <h3 class="text-center">@Model.ExceptionMessage</h3>                      
            </div>
        }
    </div>
</div>

